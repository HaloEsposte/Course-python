'''
#Calculadora de Descontos

valor_compra = float(input("Digite o valor da sua compra: "))

if valor_compra >= 1000.00:
    desconto = valor_compra * 0.2
    valor_compra -= desconto
    print("Você recebeu 20% de desconto!")
    
elif (valor_compra >= 500.00) and (valor_compra < 1000.00):
    desconto = valor_compra * 0.1
    valor_compra -= desconto
    print("Você recebeu 10% de desconto!")
else:
    print("Você não recebeu desconto!")
    
print(f"Valor do desconto: R$ {desconto:.2f}")
print(f"Valor final da compra: R$ {valor_compra:.2f}")

